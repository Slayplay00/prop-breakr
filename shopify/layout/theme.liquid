<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{{ page_title }}{% if current_page != 1 %} â€“ Page {{ current_page }}{% endif %}</title>
    {{ content_for_header }}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              'brand-dark': '#0D1117',
              'brand-gray': '#161B22',
              'brand-light-gray': '#21262D',
              'brand-primary': '#238636',
              'brand-primary-hover': '#2ea043',
              'brand-secondary': '#3B82F6',
              'brand-text': '#C9D1D9',
              'brand-text-light': '#8B949E',
            },
            fontFamily: {
              sans: ['Inter', 'sans-serif'],
            }
          }
        }
      }
    </script>

    <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
  </head>
  <body class="bg-brand-dark font-sans text-brand-text">
    <div class="animated-grid-container" aria-hidden="true"></div>

    {% section 'header' %}

    <main id="MainContent" role="main" class="relative z-10 flex-grow">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="{{ 'theme.js' | asset_url }}" defer></script>
  </body>
</html>
