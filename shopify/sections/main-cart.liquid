<section class="py-12">
  <div class="container">
    <h1 class="text-3xl font-bold text-white mb-6">Your Cart</h1>
    <form action="/cart" method="post">
      <table class="w-full text-brand-text-light mb-6">
        <thead><tr><th class="text-left py-2">Product</th><th>Qty</th><th>Price</th><th>Total</th></tr></thead>
        <tbody>
          {% for item in cart.items %}
            <tr class="border-t border-brand-light-gray">
              <td class="py-3">
                <a class="text-white" href="{{ item.url }}">{{ item.product.title }}</a>
              </td>
              <td class="text-center">
                <input class="w-16 bg-brand-light-gray rounded-md p-2 text-white" type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0">
              </td>
              <td class="text-center">{{ item.price | money }}</td>
              <td class="text-center">{{ item.line_price | money }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      <div class="flex items-center justify-between">
        <span class="text-white font-semibold">Total: {{ cart.total_price | money }}</span>
        <div class="space-x-2">
          <button name="update" class="bg-brand-light-gray text-white px-4 py-2 rounded">Update</button>
          <button name="checkout" class="bg-brand-primary text-white px-4 py-2 rounded">Checkout</button>
        </div>
      </div>
    </form>
  </div>
</section>
{% schema %}
{ "name": "Cart", "settings": [] }
{% endschema %}
