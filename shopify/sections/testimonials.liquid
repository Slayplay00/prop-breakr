<section class="py-20 bg-transparent">
  <div class="container">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white">Don't Just Take Our Word For It</h2>
      <p class="text-lg text-brand-text-light mt-4 max-w-2xl mx-auto">See what our successful clients have to say about their experience.</p>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% assign testimonials = [
        {"name":"Jordan P.","title":"Funded Futures Trader","quote":"They handled everything flawlessly. I was funded faster than I expected."},
        {"name":"Amelia W.","title":"Forex Trader","quote":"Super professional and transparent. Worth every dollar."},
        {"name":"Chris D.","title":"Crypto Trader","quote":"The process was smooth and the communication top-notch."}
      ] %}
      {% for t in testimonials %}
      <div class="bg-brand-gray/40 backdrop-blur-lg p-8 rounded-lg blended-border h-full flex flex-col justify-between">
        <p class="text-brand-text italic mb-6">"{{ t.quote }}"</p>
        <div class="flex items-center">
          <div class="w-12 h-12 rounded-full mr-4 bg-brand-light-gray"></div>
          <div>
            <p class="font-bold text-white">{{ t.name }}</p>
            <p class="text-sm text-brand-text-light">{{ t.title }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Testimonials",
  "settings": []
}
{% endschema %}
