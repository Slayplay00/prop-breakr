{% assign plans = [
  {"size":"$10,000","price":299,"popular":false},
  {"size":"$25,000","price":499,"popular":true},
  {"size":"$50,000","price":799,"popular":false},
  {"size":"$100,000","price":1299,"popular":false}
] %}
<section class="py-20 bg-transparent">
  <div class="container">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white">Choose Your Path to Funding</h2>
      <p class="text-lg text-brand-text-light mt-4 max-w-2xl mx-auto">Transparent one-time fees. No hidden costs. Get the capital you deserve.</p>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {% for p in plans %}
      <div class="relative bg-brand-gray/40 backdrop-blur-lg p-8 rounded-lg blended-border flex flex-col">
        {% if p.popular %}
          <div class="bg-brand-primary text-white text-xs font-bold px-4 py-1 rounded-full absolute -top-4 right-8">MOST POPULAR</div>
        {% endif %}
        <h3 class="text-2xl font-bold text-white">{{ p.size }} Account</h3>
        <p class="text-brand-text-light mt-2">One-time service fee</p>
        <div class="my-8"><span class="text-5xl font-black text-white">${{ p.price }}</span></div>
        <ul class="space-y-4 mb-8 flex-grow">
          <li class="flex items-start"><svg class="w-5 h-5 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg><span class="ml-3 text-brand-text">Challenge passed by experts</span></li>
          <li class="flex items-start"><svg class="w-5 h-5 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg><span class="ml-3 text-brand-text">Transparent reporting</span></li>
          <li class="flex items-start"><svg class="w-5 h-5 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg><span class="ml-3 text-brand-text">Priority support</span></li>
        </ul>
        <a href="/pages/contact" class="w-full mt-auto bg-brand-primary text-white font-bold py-3 rounded-lg hover:bg-brand-primary-hover transition-all duration-300 shadow-lg shadow-brand-primary/30 text-center">Start Now</a>
      </div>
      {% endfor %}
    </div>
    <div class="text-center mt-16 p-8 md:p-12 bg-brand-gray/40 backdrop-blur-lg blended-border rounded-xl">
      <h3 class="text-3xl font-bold text-white">Expert Account Management</h3>
      <p class="text-brand-primary font-semibold mt-2 text-lg">We only win when you win.</p>
      <p class="text-brand-text-light mt-4 mb-6 max-w-2xl mx-auto">Already have a funded account? Let our professionals manage it for you. We handle the trades and split the profits, so you can focus on your life while your capital grows.</p>
      <div class="bg-brand-primary/10 border-2 border-dashed border-brand-primary rounded-lg p-6 max-w-xl mx-auto mb-8">
        <h4 class="font-bold text-xl text-brand-primary">Get Your First Payout FREE!</h4>
        <p class="text-white mt-1">As a welcome bonus, your first profit split is on us. You keep 100% of the earnings from your first payout.</p>
      </div>
      <a class="bg-brand-secondary text-white font-bold px-8 py-3 rounded-lg hover:bg-blue-500 transition-colors duration-300 transform hover:scale-105" href="/pages/contact">Explore Account Management</a>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Pricing",
  "settings": []
}
{% endschema %}
